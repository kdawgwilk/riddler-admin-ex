<h1>Listing Conditions</h1>

<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Source</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for condition <- @conditions do %>
    <tr>
      <td><%= condition.key %></td>
      <td><%= condition.source %></td>

      <td>
        <span><%= link "Show", to: Routes.workspace_condition_path(@conn, :show, @workspace_id, condition) %></span>
        <span><%= link "Edit", to: Routes.workspace_condition_path(@conn, :edit, @workspace_id, condition) %></span>
        <span><%= link "Delete", to: Routes.workspace_condition_path(@conn, :delete, @workspace_id, condition), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Condition", to: Routes.workspace_condition_path(@conn, :new, @workspace_id) %></span>
<span><%= link "Back", to: Routes.workspace_path(@conn, :show, @workspace_id) %></span>
