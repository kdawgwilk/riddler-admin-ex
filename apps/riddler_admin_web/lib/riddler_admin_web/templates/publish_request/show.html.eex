<h1>Show Publish request</h1>

<ul>

  <li>
    <strong>Status:</strong>
    <%= @publish_request.status %>
  </li>

  <li>
    <strong>Subject:</strong>
    <%= @publish_request.subject %>
  </li>

  <li>
    <strong>Message:</strong>
    <%= @publish_request.message %>
  </li>

  <%= if is_nil(@publish_request.approved_at) do %>
    <li>
      <%= link "Approve", to: Routes.workspace_publish_request_approval_path(@conn, :approve, @workspace_id, @publish_request.id) %></span>
    </li>
  <% else %>
    <li>
      <strong>Approved by:</strong>
      <%= @publish_request.approved_by_id %>
    </li>

    <%= if is_nil(@publish_request.published_at) do %>
      <li>
        <%= link "Publish", to: Routes.workspace_publish_request_publish_path(@conn, :publish, @workspace_id, @publish_request.id) %></span>
      </li>
    <% else %>
      <li>
        <strong>Published by:</strong>
        <%= @publish_request.published_by_id %>
      </li>
    <% end %>
  <% end %>

</ul>

<pre><%= @definition %></pre>

<span><%= link "Edit", to: Routes.workspace_publish_request_path(@conn, :edit, @workspace_id, @publish_request) %></span>
<span><%= link "Back", to: Routes.workspace_publish_request_path(@conn, :index, @workspace_id) %></span>
