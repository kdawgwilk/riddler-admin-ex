<h1>Show Flag</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @flag.name %>
  </li>

  <li>
    <strong>Key:</strong>
    <%= @flag.key %>
  </li>

  <li>
    <strong>Type:</strong>
    <%= @flag.type %>
  </li>

  <li>
    <strong>Enabled:</strong>
    <%= @flag.enabled %>
  </li>

  <li>
    <strong>Default Treatment:</strong>
    <%= @flag.disabled_treatment %>
  </li>

  <li>
    <strong>Include Condition:</strong>
    <%= @flag.include_source %>
  </li>

  <li>
    <%= link "Assigners", to: Routes.workspace_flag_flag_assigner_path(@conn, :index, @workspace_id, @flag) %>
  </li>

  <li>
    <%= link "Treatments", to: Routes.workspace_flag_flag_treatment_path(@conn, :index, @workspace_id, @flag) %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.workspace_flag_path(@conn, :edit, @workspace_id, @flag) %></span>
<span><%= link "Back", to: Routes.workspace_flag_path(@conn, :index, @workspace_id) %></span>
